<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Button:
            text: "hello world"
        RoundedButton:
            text: "goodbye world"
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)
            on_press: print("goodbye")

<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_norma: ''
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[18]