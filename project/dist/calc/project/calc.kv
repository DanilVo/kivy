<Button>
    font_size: 26
    size_hint: (.2,.2)


<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
    
        TextInput:
            id: calc_input
            multiline : False
            text: "0"
            halign: "right"
            font_size: 45
            size_hint: (1, .15)
        
        GridLayout:
            cols: 4
            rows: 5
            
            Button:
                text: "%"
            Button:
                text: "C"
                on_press: root.clear()

            Button:
                id: clear
                text: u"\u00AB"
                on_press: root.remove()
            Button:
                text: "/"
                on_press: root.math_sign("/")

            Button:
                text: "7"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(7)
            Button:
                text: "8"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(8)


            Button:
                text: "9"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(9)

            Button:
                text: "x"
                on_press: root.math_sign("x")

            Button:
                text: "4"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(4)

            Button:
                text: "5"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(5)

            Button:
                text: "6"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(6)

            Button:
                text: "-"
                on_press: root.math_sign("-")

            Button:
                text: "1"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(1)

            Button:
                text: "2"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(2)

            Button:
                text: "3"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(3)

            Button:
                text: "+"
                on_press: root.math_sign("+")

            Button:
                text: "+/-"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.pos_neg()

            Button:
                text: "0"
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.press_button(0)

            Button:
                text: "."
                background_color: (157/255, 157/255, 157/255, 1)
                on_press: root.dot()

            Button:
                text: "="
                on_press: root.equals()

        